{
    "name": "vscode-elm-test-runner",
    "displayName": "Run elm tests",
    "description": "Run elm tests in VS Code",
    "icon": "resources/elmIcon.png",
    "repository": {
        "type": "git",
        "url": " https://github.com/frawa/vscode-elm-test-runner.git"
    },
    "version": "0.7.3",
    "publisher": "FraWa",
    "engines": {
        "vscode": "^1.28.1"
    },
    "categories": [
        "Programming Languages"
    ],
    "license": "MIT",
    "activationEvents": [
        "onView:elmTestRunner",
        "onLanguage:elm"
    ],
    "main": "./out/extension",
    "extensionDependencies": [
        "hbenl.vscode-test-explorer"
    ],
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "elm-test-runner",
                    "title": "Elm Test Runner",
                    "icon": "resources/Elm_logo.svg"
                }
            ]
        },
        "commands": [
            {
                "command": "elmTestRunner.toggle",
                "title": "Enable/Disable Elm Tests",
                "icon": {
                    "light": "resources/light/outline-toggle_on-24px.svg",
                    "dark": "resources/dark/outline-toggle_on-24px.svg"
                }
            },
            {
                "command": "elmTestRunner.diff",
                "title": "Difference",
                "icon": {
                    "light": "resources/light/outline-compare_arrows-24px.svg",
                    "dark": "resources/dark/outline-compare_arrows-24px.svg"
                }
            }
        ],
        "views": {
            "elm-test-runner": [
                {
                    "id": "elmTestRunner",
                    "name": "Tests"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "elmTestRunner.toggle",
                    "when": "view == elmTestRunner",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "elmTestRunner.diff",
                    "when": "view == elmTestRunner && viewItem == canDiff",
                    "group": "inline"
                }
            ]
        },
        "taskDefinitions": [
            {
                "type": "elm-test",
                "properties": {}
            }
        ],
        "problemMatchers": [
            {
                "name": "elm",
                "severity": "error",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^--\\s(.*)\\s-\\s(.*\\.elm)$",
                        "code": 1,
                        "file": 2
                    },
                    {
                        "regexp": "^$"
                    },
                    {
                        "regexp": "^(.+)\\.$",
                        "message": 1
                    },
                    {
                        "regexp": "^$"
                    },
                    {
                        "regexp": "^(\\d+)|",
                        "line": 1
                    }
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "tslint -p .",
        "lintfix": "tslint --fix -p .",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "utest": "mocha -r ts-node/register ./ src/utest/**/*.test.ts",
        "utest-watch": "mocha --watch -r ts-node/register ./ src/utest/**/*.test.ts",
        "vsce-package": "vsce package --yarn",
        "vsce-publish": "vsce publish --yarn"
    },
    "devDependencies": {
        "@types/chai": "^4.2.12",
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.6.0",
        "@types/vscode": "^1.48.0",
        "chai": "^4.2.0",
        "ts-node": "^9.0.0",
        "tslint": "^6.1.3",
        "typescript": "^4.0.2",
        "vsce": "^1.79.2",
        "vscode": "^1.1.37"
    },
    "dependencies": {
        "jsonc-parser": "^2.3.0",
        "vscode-test-adapter-api": "^1.9.0",
        "vscode-test-adapter-util": "^0.7.1"
    }
}
