{
    "name": "vscode-elm-test-runner",
    "displayName": "Run elm tests",
    "description": "Run elm tests in VS Code",
    "icon": "resources/elmIcon.png",
    "repository": {
        "type": "git",
        "url": " https://github.com/frawa/vscode-elm-test-runner.git"
    },
    "version": "0.2.3",
    "publisher": "FraWa",
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Languages"
    ],
    "license": "MIT",
    "activationEvents": [
        "onView:elmTestRunner"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "elmTestRunner.run",
                "title": "Run/Watch Elm Tests",
                "icon": {
                    "light": "resources/light/play-7-16.png",
                    "dark": "resources/dark/play-7-16.png"
                }
            },
            {
                "command": "elmTestRunner.stop",
                "title": "Stop watching Elm Tests",
                "icon": {
                    "light": "resources/light/eject-16.png",
                    "dark": "resources/dark/eject-16.png"
                }
            },
            {
                "command": "elmTestRunner.diff",
                "title": "Difference",
                "icon": {
                    "light": "resources/light/compare-16.png",
                    "dark": "resources/dark/compare-16.png"
                }
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "elmTestRunner",
                    "name": "Elm Test Runner"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "elmTestRunner.run",
                    "when": "view == elmTestRunner",
                    "group": "navigation"
                },
                {
                    "command": "elmTestRunner.stop",
                    "when": "view == elmTestRunner",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "elmTestRunner.diff",
                    "when": "view == elmTestRunner && viewItem == canDiff",
                    "group": "inline"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "utest": "ts-mocha -p ./ src/utest/**/*.test.ts",
        "utest-watch": "ts-mocha --watch -p ./ src/utest/**/*.test.ts"
    },
    "devDependencies": {
        "@types/chai": "^4.1.2",
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.56",
        "chai": "^4.1.2",
        "ts-mocha": "^1.1.0",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.13"
    },
    "dependencies": {
        "jsonc-parser": "^0.4.2",
        "tree-kill": "^1.2.0"
    }
}
