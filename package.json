{
    "name": "vscode-elm-test-runner",
    "displayName": "elm-test-runner",
    "description": "Run elm tests",
    "version": "0.0.1",
    "publisher": "vsce",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello",
        "onView:elmTestRunner"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello World"
            },
            {
				"command": "elmTestRunner.run",
				"title": "Run",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			}
        ],
		"views": {
			"explorer": [
				{
					"id": "elmTestRunner",
					"name": "Elm Test Runner"
                }
            ]
        },
        "menus": {
			"view/title": [
				{
					"command": "elmTestRunner.run",
					"when": "view == elmTestRunner",
					"group": "navigation"
				}
			]
		}
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "utest": "ts-mocha -p ./ src/utest/**/*.test.ts",
        "utest-watch": "ts-mocha --watch -p ./ src/utest/**/*.test.ts"
    },
    "devDependencies": {
        "@types/chai": "^4.1.2",
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "chai": "^4.1.2",
        "ts-mocha": "^1.1.0",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "jsonc-parser": "^0.4.2"
    }
}
