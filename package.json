{
    "name": "vscode-elm-test-runner",
    "displayName": "Run elm tests",
    "description": "Run elm tests in VS Code",
    "icon": "resources/elmIcon.png",
    "repository": {
        "type": "git",
        "url": " https://github.com/frawa/vscode-elm-test-runner.git"
    },
    "version": "0.5.0",
    "publisher": "FraWa",
    "engines": {
        "vscode": "^1.28.1"
    },
    "categories": [
        "Programming Languages"
    ],
    "license": "MIT",
    "activationEvents": [
        "onView:elmTestRunner",
        "onLanguage:elm"
    ],
    "main": "./out/extension",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "elm-test-runner",
                    "title": "Elm Test Runner",
                    "icon": "resources/Elm_logo.svg"
                }
            ]
        },
        "commands": [
            {
                "command": "elmTestRunner.toggle",
                "title": "Enable/Disable Elm Tests",
                "icon": {
                    "light": "resources/light/outline-toggle_on-24px.svg", 
                    "dark": "resources/dark/outline-toggle_on-24px.svg" 
                }
            },
            {
                "command": "elmTestRunner.diff",
                "title": "Difference",
                "icon": {
                    "light": "resources/light/outline-compare_arrows-24px.svg",
                    "dark": "resources/dark/outline-compare_arrows-24px.svg"
                }
            }
        ],
        "views": {
            "elm-test-runner": [
                {
                    "id": "elmTestRunner",
                    "name": "Tests"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "elmTestRunner.toggle",
                    "when": "view == elmTestRunner",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "elmTestRunner.diff",
                    "when": "view == elmTestRunner && viewItem == canDiff",
                    "group": "inline"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "utest": "mocha -r ts-node/register ./ src/utest/**/*.test.ts",
        "utest-watch": "ts-mocha --watch -p ./ src/utest/**/*.test.ts"
    },
    "devDependencies": {
        "@types/chai": "^4.1.2",
        "@types/mocha": "^5.2.5",
        "@types/node": "^8.10.25",
        "chai": "^4.2.0",
        "ts-node": "^7.0.1",
        "tslint": "^5.8.0",
        "typescript": "^3.1.2",
        "vscode": "^1.1.21"
    },
    "dependencies": {
        "jsonc-parser": "^2.0.2"
    }
}
